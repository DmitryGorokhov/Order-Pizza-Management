<Window x:Class="Order_Pizza_Management.Views.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order_Pizza_Management.Views"
        mc:Ignorable="d"
        Title="Вход администратора" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="14" Margin="4,8,4,16" Text="Вход администратора" TextAlignment="Center" HorizontalAlignment="Left"/>
            <StackPanel Margin="4" Orientation="Horizontal"  FocusManager.FocusedElement="{Binding ElementName=passwordBox}">
                <TextBlock FontSize="14" Text="Пароль:" Margin="0,0,8,0"/>
                <PasswordBox Name="passwordBox" Width="200"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="2,4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Click="AcceptButton_Click" Content="Войти" Margin="4,0,8,0" Background="#727077" BorderBrush="{x:Null}" Height="28">
                <Button.ToolTip>Подтврдить введенные данные</Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
